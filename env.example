# Example environment variables (copy to appropriate .env files per app)
# Do not commit real secrets. This file is safe to commit.

NODE_ENV=development
# PostgreSQL connection string
DATABASE_URL=postgres://user:pass@localhost:5432/webshop
# Or use the remote connection from `baza.md`
# DATABASE_URL=postgres://neondb_owner:password@host:5432/neondb

# Redis URL
REDIS_URL=redis://localhost:6379

# Session secret (random string for signing cookies)
SESSION_SECRET=changeme-session-secret

# MinIO (S3-compatible) storage
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=changeme-access
MINIO_SECRET_KEY=changeme-secret
MINIO_BUCKET=webshop-media

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Identity verification provider (mock for local dev)
IDENTITY_PROVIDER=mock
# IDENTITY_API_KEY=
# IDENTITY_WEBHOOK_SECRET=
IDENTITY_MIN_SCORE=0.6

# Vendor security deposit
SECURITY_DEPOSIT_ENABLED=false
SECURITY_DEPOSIT_AMOUNT_CENTS=5000
SECURITY_DEPOSIT_CURRENCY=EUR

# Require phone verification before vendor application
REQUIRE_PHONE_VERIFICATION=false

# Observability
SENTRY_DSN=
